{
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "parserOptions": {
    "project": ["tsconfig.eslint.json"],
    "extraFileExtensions": [".json"]
  },
  "rules": {
    "@typescript-eslint/no-empty-interface": "off"
  }
}
