{
  "compilerOptions": {
    "module": "CommonJS",
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "declaration": false,
    "removeComments": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "paths": {
      "@app/rpc": [
        "libs/rpc/src"
      ],
      "@app/rpc/*": [
        "libs/rpc/src/*"
      ],
      "@app/service-health": [
        "libs/service-health/src"
      ],
      "@app/service-health/*": [
        "libs/service-health/src/*"
      ],
      "@app/definitions": [
        "libs/definitions/src"
      ],
      "@app/definitions/*": [
        "libs/definitions/src/*"
      ],
      "@app/scheduler-module": [
        "libs/scheduler-module/src"
      ],
      "@app/scheduler-module/*": [
        "libs/scheduler-module/src/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}