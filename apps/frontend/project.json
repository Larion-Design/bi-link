{
  "name": "frontend",
  "projectType": "application",
  "implicitDependencies": ["defs", "tools", "default-values"],
  "targets": {
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "tsc --noEmit"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "nx:run-commands",
      "depends_on": ["type-check", "^build"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["vite build"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "depends_on": "type-check",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["pnpm test:unit", "pnpm test:e2e"],
        "parallel": true
      }
    }
  }
}
