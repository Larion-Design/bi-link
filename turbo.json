{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false
    },
    "type-check": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["type-check"],
      "outputs": ["dist/**"]
    },
    "build:native": {
      "dependsOn": ["type-check"],
      "outputs": ["dist/**"]
    },
    "api": {
      "outputs": ["dist/**"]
    },
    "indexer": {
      "outputs": ["dist/**"]
    },
    "files-parser": {
      "outputs": ["dist/**"]
    },
    "graph": {
      "outputs": ["dist/**"]
    },
    "user-actions-recorder": {
      "outputs": ["dist/**"]
    }
  },
  "globalEnv": ["GITHUB_TOKEN"]
}