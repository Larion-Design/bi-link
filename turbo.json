{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "dependsOn": ["backend", "frontend"],
      "outputs": ["dist/**"]
    },
    "backend": {
      "cache": false,
      "dependsOn": ["api", "graph", "indexer", "files-manager", "user-actions-recorder"],
      "outputs": ["dist/**"]
    },
    "frontend": {
      "cache": false,
      "dependsOn": ["^dev"],
      "outputs": ["dist/**"]
    },
    "native-app": {
      "cache": false,
      "dependsOn": ["^native:dev"],
      "outputs": ["dist/**"]
    },
    "api": {
      "cache": false,
      "dependsOn": ["^api"],
      "outputs": ["dist/**"]
    },
    "indexer": {
      "cache": false,
      "dependsOn": ["^indexer"],
      "outputs": ["dist/**"]
    },
    "files-manager": {
      "cache": false,
      "dependsOn": ["^files-manager"],
      "outputs": ["dist/**"]
    },
    "graph": {
      "cache": false,
      "dependsOn": ["^graph"],
      "outputs": ["dist/**"]
    },
    "user-actions-recorder": {
      "cache": false,
      "dependsOn": ["^user-actions-recorder"],
      "outputs": ["dist/**"]
    },
    "cli": {
      "cache": false,
      "dependsOn": ["^cli"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "cache": true,
      "dependsOn": ["^test"],
      "outputs": []
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}