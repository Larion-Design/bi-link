{
  "name": "bi-link",
  "version": "0.0.9",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "description": "BI Link Monorepo",
  "scripts": {
    "start": "pnpm nx run-many -t start -p backend,frontend",
    "backend": "pnpm nx start backend",
    "frontend": "pnpm nx start frontend",
    "build": "pnpm nx affected --base=FETCH_HEAD -t build --parallel=3",
    "docker": "pnpm nx start docker",
    "docker:stop": "pnpm nx stop docker",
    "docker:restart": "pnpm nx restart docker",
    "lint": "nx affected --base=FETCH_HEAD -t lint --nxBail",
    "test": "nx affected -t test --onlyChanged --detectLeaks",
    "format": "nx format:check --base=FETCH_HEAD"
  },
  "author": "alextudor@duck.com",
  "license": "proprietary",
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/node": "^20.5.4",
    "dotenv": "^16.3.1",
    "nx": "17.2.7",
    "rimraf": "^5",
    "typescript": "^5.2.2",
    "parcel": "^2.10.3",
    "@parcel/transformer-typescript-types": "^2.10.3",
    "@parcel/packager-ts": "2.10.3",
    "@nx/eslint": "17.2.8",
    "@nx/eslint-plugin": "17.2.8",
    "@vercel/ncc": "^0.38.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-loader": "^8.3.0",
    "babel-plugin-formatjs": "^10.4.0",
    "prettier": "^2.8.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-storybook": "^0.6.15"
  },
  "pnpm": {
    "requiredScripts": [
      "build"
    ]
  },
  "volta": {
    "node": "21.6.1",
    "pnpm": "8.14.0"
  }
}
